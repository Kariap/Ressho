<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:layout_marginLeft="4dp"
        android:background="@drawable/rounded_corners_et"
        app:srcCompat="@drawable/ic_launcher_background"
        android:id="@+id/order_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="150dp"/>
    <TextView
        android:fontFamily="sans-serif-black"
        android:layout_marginLeft="12dp"
        android:textSize="20sp"
        android:id="@+id/order_name"
        app:layout_constraintLeft_toRightOf="@id/order_photo"
        tools:text="Silky blue Saree"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="12dp"
        android:textSize="20sp"
        android:id="@+id/order_customer_name"
        android:fontFamily="sans-serif-light"
        app:layout_constraintLeft_toRightOf="@id/order_photo"
        tools:text="Rajesh Lakhani"
        app:layout_constraintTop_toBottomOf="@id/order_name"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/order_status"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Delivered"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_green_light"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/order_customer_name"
        app:layout_constraintLeft_toRightOf="@id/order_photo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/label_rating"
        android:textSize="16sp"
        android:gravity="center"
        android:text="Rate it"
        android:textColor="@color/colorPrimary"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="@id/order_rating"
        app:layout_constraintBottom_toBottomOf="@id/order_rating"
        app:layout_constraintLeft_toRightOf="@id/order_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RatingBar
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:layout_margin="8dp"
        android:id="@+id/order_rating"
        android:numStars="5"
        app:layout_constraintTop_toBottomOf="@id/order_status"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/label_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/order_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="4dp"
            android:textAllCaps="false"
            android:textSize="@dimen/button_text_small"
            android:textColor="@android:color/white"
            android:text="Write Review"
            android:background="@drawable/rounded_corners"
            android:id="@+id/write_review"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_margin="4dp"
            android:textAllCaps="false"
            android:textSize="@dimen/button_text_small"
            android:textColor="@android:color/white"
            android:text="Return Order"
            android:background="@drawable/rounded_corners"
            android:id="@+id/return_order"
            android:layout_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>