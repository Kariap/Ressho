<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    tools:context=".UserLogin">
    <TextView
        android:layout_margin="@dimen/margin_16"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/instruction_size"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:id="@+id/login_instruction"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/login_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_instruction"
        android:id="@+id/label_username"
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_corners_et"
        android:id="@+id/et_username"
        app:layout_constraintTop_toBottomOf="@id/label_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_username"
        android:id="@+id/label_password"
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:inputType="textPassword"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/rounded_corners_et"
        android:id="@+id/et_password"
        app:layout_constraintTop_toBottomOf="@id/label_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_corners"
        android:padding="@dimen/padding_12"
        android:layout_marginTop="@dimen/margin_32"
        android:textAllCaps="false"
        android:text="Seller Login"
        android:textSize="@dimen/button_text"
        android:id="@+id/btn_seller_login"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_corners"
        android:padding="@dimen/padding_12"
        android:layout_marginTop="@dimen/margin_32"
        android:textSize="@dimen/button_text"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        android:textAllCaps="false"
        android:text="Re-seller Login"
        android:id="@+id/btn_reseller_login"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/btn_reseller_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:text="Forgotten account?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>