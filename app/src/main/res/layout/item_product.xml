<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/margin_16"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:paddingTop="4dp"
        app:srcCompat="@drawable/ic_noun_package_2425860"
        android:id="@+id/product_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/product_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="16sp"
            android:layout_margin="12dp"
            tools:text="Kashmiri Saree"
            android:id="@+id/product_name"
            android:fontFamily="sans-serif-black"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/product_name"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            tools:text="ShriRam Sarees"
            android:id="@+id/product_seller"
            android:fontFamily="sans-serif-medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/product_price"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            app:layout_constraintLeft_toRightOf="@id/label_price"
            app:layout_constraintTop_toBottomOf="@id/product_seller"
            tools:text="Rs.444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/label_price"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/product_seller"
            android:text="Price "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20sp"
            android:id="@+id/label_mrp"
            android:layout_marginLeft="12dp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintRight_toLeftOf="@id/product_mrp"
            app:layout_constraintTop_toTopOf="@id/product_price"
            android:text="MRP "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20sp"
            android:layout_marginRight="12dp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-black"
            android:id="@+id/product_mrp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/product_price"
            android:text="240"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="12dp"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/product_ratings"
                android:textSize="20sp"
                tools:text="4.9"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_star_24"
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/label_mrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_small"
                android:textColor="@android:color/white"
                android:text="@string/share_now"
                android:background="@drawable/rounded_corners"
                android:id="@+id/share_product"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Button
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_small"
                android:textColor="@android:color/white"
                android:text="Order"
                android:background="@drawable/rounded_corners"
                android:id="@+id/add_to_cart"
                android:layout_margin="4dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>