<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="28dp"
        android:layout_height="wrap_content"
        tools:context=".activities.AddProductActivity">
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/label_name"
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_corners_et"
            android:id="@+id/et_product_name"
            app:layout_constraintTop_toBottomOf="@id/label_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_product_name"
            android:id="@+id/label_price"
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_corners_et"
            android:id="@+id/et_product_price"
            app:layout_constraintTop_toBottomOf="@id/label_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_product_price"
            android:id="@+id/label_mrp"
            android:text="MRP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_corners_et"
            android:id="@+id/et_product_mrp"
            app:layout_constraintTop_toBottomOf="@id/label_mrp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_product_mrp"
            android:textAllCaps="false"
            android:textSize="@dimen/button_text_small"
            android:textColor="@android:color/white"
            android:text="Add"
            android:background="@drawable/rounded_corners"
            android:id="@+id/add_product_by_seller"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>